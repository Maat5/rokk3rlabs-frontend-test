html, body
  width 100%
  height 100%

body
  overflow-x hidden

.app
  // display flex
  min-height 100vh
  background-color rgb(245, 245, 250)
  // flex-flow  column wrap
  // justify-content  center

.app-header
  order  -1
  z-index 1050
  top 0
  width 100%
  height 50px

.app-aside
  padding  1em
  flex  0 0 12em !important
  height auto
  background-color rgb(47, 50, 58)
  color  #FFFF

.app-content
  flex-flow  row wrap
  flex-grow  inherit
  margin  20px
  background-color rgb(245, 245, 250)

.app-body
  display flex
  flex 1 0 auto

.navbar
  border-width  0
  border-radius  0
  margin  0
  background-color rgb(47, 50, 58)

.navbar-header
  color #FFFF
  a
    color #FFFF
  .logo > img
    background-color rgb(30, 32, 37)
    margin 0 auto
    padding 10px
    width 200px

.container
  justify-content  flex-start
  flex 1
  padding  20px

.row-flex
  display flex
  flex-flow row nowrap

.row-flex-wrap
  align-content  flex-start
  flex 0

.row-flex > div[class*='col-'], .container-flex > div[class*='col-']
   margin -.2px /* hack adjust for wrapping */

.container-flex > div[class*='col-'] div,.row-flex > div[class*='col-'] div
  width 100%

.flex-col
  display  flex
  flex-flow  column nowrap

.col-lg
  flex 1

.col-md
  flex 1 2 50%


.graph-container
  background-color white
  canvas
    max-height 400px
    max-width 400px
    display inline-block
  .speed
    max-width 80%

.m-md
  margin 20px !important

.bg-white
  background-color bg-white

.flex-inline
  flex-direction row
  flex-wrap wrap
  justify-content space-around

.nav
  padding 5px
  li
    list-style-type  none
    padding 5px
  .icons
    color #5c9df5

.wrapper
  padding 20px

.title-dash
  color font-aqua

.text-center
  text-align center

.legend
  li
    list-style-type: none
    padding 5px
