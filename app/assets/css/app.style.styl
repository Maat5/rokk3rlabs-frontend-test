html, body
  width 100%
  height 100%

body
  overflow-x hidden

.app
  display flex
  min-height 100vh
  flex-direction column
  background-color rgb(245, 245, 250)

.app-header
  order: -1
  z-index 1050
  top 0
  width 100%
  height 50px

.app-aside
  padding: 1em
  flex: 0 0 12em;
  height 100vh
  background-color rgb(47, 50, 58)
  color: #FFFF

.app-content
  flex: 1;

.app-body
  display flex
  flex 1 0 auto
  padding: var(--space);

.navbar
  border-width: 0;
  border-radius: 0;
  margin: 0;
  background-color rgb(47, 50, 58)

.navbar-header
  color #FFFF
  a
    color #FFFF
  .logo > img
    background-color rgb(30, 32, 37)
    margin 0 auto
    padding 10px
    width 200px

